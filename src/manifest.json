{
    "manifest_version": 3,
    "name": "Local Storage Explorer",
    "description": "Easily view, copy or search local storage content from any webpage by clicking on the extension icon.",
    "version": "0.0.1",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Local Storage Explorer"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content/retrieve.js"
            ],
            "run_at": "document_start"
        }
    ]
}