{
    "manifest_version": 3,
    "name": "Storage Helper",
    "description": "View and copy local storage content easily.",
    "version": "0.0.1",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Storage Helper"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "scripting"
    ]
}